<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.tarmeez.game.auth.RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/RegisterFragmentToLoginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tarmeez.game.auth.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/LoginFragmentToRegisterFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/LoginFragmentToForgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.tarmeez.game.auth.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/ForgotPasswordFragmentToLoginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>